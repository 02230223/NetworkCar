
.header-content {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	font-size: 14px;
}

/* 标题 */
.uni-title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-bottom: 5px;
	font-size: 14px;
	font-weight: bold;
	color: #3b4144;
}

/* 描述 额外文本 */
.uni-note {
	color: #999;
	font-size: 12px;
}
.footer {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.footer-button {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 12px;
	height: 30px;
	color: #fff;
	background-color: #ff5a5f;
}
.banner {
	position: relative;
	margin: 0 15px;
	height: 180px;
	overflow: hidden;
}
.banner-img {
	position: absolute;
	width: 100%;
}
.banner-title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	position: absolute;
	padding: 0 15px;
	width: 100%;
	bottom: 0;
	height: 30px;
	font-size: 14px;
	color: #fff;
	background: rgba(0, 0, 0, 0.4);
	overflow: hidden;
	box-sizing: border-box;
}
.uni-ellipsis {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.article-title {
	padding: 20px 15px;
	padding-bottom: 0;
}
.article-content {
	padding: 15px;
	font-size: 15px;
	overflow: hidden;
}

